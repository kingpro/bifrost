{{ define "index.tmpl" }}
<!DOCTYPE html>
<html lang="utf8">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../favicon.ico">

  <title>Service Discovery Manager</title>

  <!-- Bootstrap core CSS -->
  <link href="/static/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/static/css/dashboard.css" rel="stylesheet">

  <link rel="stylesheet" href="/static/css/bootstrap-select.min.css">

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>

{{ if gt (.ErrorMsg|len) 0 }}
<div class="alert alert-danger alert-dismissible" role="alert">
  <strong>Error:</strong> {{ .ErrorMsg }}
</div>
{{ end }}

<form method="get">
  <button type="submit" class="btn btn-primary">绘图</button>
  <div class="row-fluid">
  <div class="col-lg-6">
    <div class="form-group">
      <label for="connd-addr" class="control-label">Connd:</label>
      <textarea class="form-control" name="connd-addr" rows="15" id="connd-addr"  placeholder="connd debug地址,每行一个" >{{ if gt (.ConndList|len) 0 }}{{.ConndList}}{{ end }}</textarea>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group">
      <label for="pushd-addr" class="control-label">Pushd:</label>
      <textarea class="form-control" name="pushd-addr" rows="15" id="pushd-addr" placeholder="pushd debug地址，每行一个">{{ if gt (.PushdList|len) 0 }}{{.PushdList}}{{ end }}</textarea>
    </div>
  </div>
  </div>
</form>

{{ if gt (.ImagePath|len) 0 }}
    <img src="{{.ImagePath}}" alt="call images">
{{ end }}


  <!-- Bootstrap core JavaScript -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="/static/js/jquery.min.js"></script>
  <script src="/static/js/bootstrap.min.js"></script>
  <script src="/static/js/bootbox.min.js"></script>
  <script src="/static/js/viewer.js"></script>
</body>
</html>
{{ end }}

